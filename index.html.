<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Response Checker</title>
</head>
<body>
  <h1>Are You Straight?</h1>
  <input type="text" id="response" placeholder="Enter yes or no">
  <button onclick="checkResponse()">Submit</button>
  <p id="output"></p>

  <script>
    function checkResponse() {
      const response = document.getElementById("response").value.toLowerCase();
      const output = document.getElementById("output");

      if (response === "yes") {
        output.textContent = "You good gang";
      } else if (response === "no") {
        output.textContent = "FAGGOT! FAG FAG FAG FAG FAG!";
      } else {
        output.textContent = "It's a yes or no question retard, the system won't know what you're saying unless you put yes or no";
      }
    }
  </script>
</body>
</html>
